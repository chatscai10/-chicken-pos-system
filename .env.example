# 環境配置
NODE_ENV=development
PORT=3000
API_VERSION=v1

# 資料庫配置 (Azure SQL Database)
DATABASE_URL="sqlserver://server_name.database.windows.net:1433;database=chicken_pos_db;user=admin_user;password=your_secure_password;trustServerCertificate=true;encrypt=true"

# Redis配置
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT配置  
JWT_SECRET="your_ultra_secure_jwt_secret_key_here_change_in_production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your_refresh_token_secret_here"
JWT_REFRESH_EXPIRES_IN="7d"

# LINE相關配置
LINE_CHANNEL_ID="your_line_channel_id"
LINE_CHANNEL_SECRET="your_line_channel_secret"
LINE_CALLBACK_URL="http://localhost:3000/auth/line/callback"

# LINE Pay配置
LINE_PAY_CHANNEL_ID="your_line_pay_channel_id"
LINE_PAY_CHANNEL_SECRET="your_line_pay_channel_secret"
LINE_PAY_ENV="sandbox"
LINE_PAY_API_URL="https://sandbox-api-pay.line.me"

# Uber Eats配置
UBER_CLIENT_ID="your_uber_client_id"
UBER_CLIENT_SECRET="your_uber_client_secret"
UBER_API_URL="https://api.uber.com"

# Azure存儲配置
AZURE_STORAGE_ACCOUNT_NAME="your_storage_account"
AZURE_STORAGE_ACCOUNT_KEY="your_storage_key"
AZURE_STORAGE_CONTAINER_NAME="pos-uploads"

# 郵件服務 (SendGrid)
SENDGRID_API_KEY="your_sendgrid_api_key"
FROM_EMAIL="noreply@yourchickenpos.com"

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 打印機配置
EPSON_API_KEY="your_epson_api_key"
STAR_API_KEY="your_star_api_key"

# 應用配置
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3001"
UPLOAD_MAX_SIZE=5242880

# 日誌配置
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"